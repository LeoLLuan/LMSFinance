@model LMSFinance.Models.Home

@{
    ViewBag.Title = "Subject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <style>

        .ac{
            background-color: lightgrey;
            width:fit-content;
            height:fit-content;
        }
        h3 {
            color: orangered;
        }

    </style>

    <div class="ac">
        <h4> Amount Student: 
            <h3>
                <b>@Model.IdStuNum</b>
            </h3>
        </h4>
    </div>

    <div class="ac">
        <h4> Discount Student: 
            <h3>
                <b>@Model.DisStuNum</b>
            </h3>
        </h4>
    </div>
    <img src="@Url.Action("pietypechart")" alt="Pie chart" />

}
