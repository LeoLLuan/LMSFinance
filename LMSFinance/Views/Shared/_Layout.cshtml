<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="StyleSheet.css" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>LMS Finance</title>
</head>

<body style="font-family:'Times New Roman'">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Alta Media", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("Kế Toán Trưởng") || User.IsInRole("Admin"))
                    {
                        <li>
                            @Html.ActionLink("Role", "Index", "Role")
                        </li>
                    }
                    @if (User.IsInRole("Kế Toán Trưởng") || User.IsInRole("Kế Toán Ghi Danh"))
                    {
                        <li class="dropdown">
                            <button class="dropbtn">Student Submit</button>
                            <div class="dropdown-content">
                                @Html.ActionLink("School Year", "Index", "StudyYear")
                                @Html.ActionLink("Faculty", "Index", "Faculty")
                                @Html.ActionLink("Subject Submit", "Index", "SubmitForm")
                                @Html.ActionLink("Grade", "Index", "Grade")
                                @Html.ActionLink("Discount", "Index", "Discount")
                                @Html.ActionLink("Prize", "Index", "Present")
                            </div>
                        </li>
                    }
                    @if (User.IsInRole("Kế Toán Trưởng") || User.IsInRole("Kế Toán Ghi Danh") || User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <button class="dropbtn">School Fee Management</button>
                            <div class="dropdown-content">
                                @Html.ActionLink("Subject Fee", "Index", "Subject")
                                @Html.ActionLink("Collect Fee", "Index", "Student")
                                @Html.ActionLink("History", "Index", "History")
                            </div>
                        </li>
                    }
                    @if (User.IsInRole("Kế Toán Trưởng") || User.IsInRole("Kế Toán Tiền Lương"))
                    {
                        <li class="dropdown">
                            <button class="dropbtn">Teacher Submit</button>
                            <div class="dropdown-content">
                                @Html.ActionLink("Absence", "Index", "Absence")
                                @Html.ActionLink("Faculty", "Index", "TeacherFaculty")
                            </div>
                        </li>
                    }
                    @if (User.IsInRole("Kế Toán Trưởng") || User.IsInRole("Kế Toán Tiền Lương"))
                    {
                        <li class="dropdown">
                            <button class="dropbtn">Salary Management</button>
                            <div class="dropdown-content">
                                @Html.ActionLink("Teacher", "Index", "Teacher")
                            </div>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
